#compdef uc-cmd

_uc-cmd_server() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" cleanup launch pkg-install plugins profile reload restart start status stop
  else
    _files
  fi
}

_uc-cmd_notifier() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" list
  else
    _files
  fi
}

_uc-cmd_corescript() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" delete edit list mqtt-subscribe mqtt-topics mqtt-unsubscribe reload
  else
    _files
  fi
}

_uc-cmd_datapuller() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" create destroy list restart start stop
  else
    _files
  fi
}

_uc-cmd_driver() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" assign get list load set unassign unload
  else
    _files
  fi
}

_uc-cmd_lpi() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" modhelp modinfo mods
  else
    _files
  fi
}

_uc-cmd_phi() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" discover download exec get list load modhelp modinfo mods ports set test unlink unload
  else
    _files
  fi
}

_uc-cmd_owfs() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" create destroy list scan test
  else
    _files
  fi
}

_uc-cmd_modbus-slave() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" get
  else
    _files
  fi
}

_uc-cmd_modbus() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" create destroy list read test write
  else
    _files
  fi
}

_uc-cmd_device() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" deploy templates undeploy update
  else
    _files
  fi
}

_uc-cmd_maintenance() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" start stop
  else
    _files
  fi
}

_uc-cmd_clone() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" group item
  else
    _files
  fi
}

_uc-cmd_config() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" get props save set
  else
    _files
  fi
}

_uc-cmd_edit() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" action corescript plugin-config server-config template update
  else
    _files
  fi
}

_uc-cmd_action() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" clear disable enable exec kill result terminate toggle
  else
    _files
  fi
}

_uc-cmd_user() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" create destroy drop-tokens key list password tokens
  else
    _files
  fi
}

_uc-cmd_key() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" create destroy list props regenerate set
  else
    _files
  fi
}

_uc-cmd_file() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" create get mod unlink upload
  else
    _files
  fi
}

_uc-cmd_cvar() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" delete get list set
  else
    _files
  fi
}

_uc-cmd_log() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" api critical debug error get info warning
  else
    _files
  fi
}

_uc-cmd() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 1 ]]; then
    compadd "$@" action clone cmd config corescript create cvar datapuller debug destroy device driver dump edit file history key list lock log lpi maintenance modbus modbus-slave notifier owfs phi save server slog state test unlock update user watch
  else
    case "${words[2]}" in
      action|clone|config|corescript|cvar|datapuller|device|driver|edit|file|key|log|lpi|maintenance|modbus|modbus-slave|notifier|owfs|phi|server|user)
        _uc-cmd_${words[2]}
        ;;
      *)
        _files
        ;;
    esac
  fi
}
