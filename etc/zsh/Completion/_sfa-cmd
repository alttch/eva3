#compdef sfa-cmd

_sfa-cmd_server() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" cleanup launch pkg-install plugins profile reload restart start status stop
  else
    _files
  fi
}

_sfa-cmd_notifier() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" list restart
  else
    _files
  fi
}

_sfa-cmd_corescript() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" delete edit list mqtt-subscribe mqtt-topics mqtt-unsubscribe reload
  else
    _files
  fi
}

_sfa-cmd_cloud() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" deploy undeploy update
  else
    _files
  fi
}

_sfa-cmd_controller() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" append disable enable list ma-test props reload remove set test upnp-rescan
  else
    _files
  fi
}

_sfa-cmd_supervisor() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" lock message unlock
  else
    _files
  fi
}

_sfa-cmd_notify() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" reload restart
  else
    _files
  fi
}

_sfa-cmd_edit() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" corescript plugin-config pvt server-config ui
  else
    _files
  fi
}

_sfa-cmd_cycle() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" list
  else
    _files
  fi
}

_sfa-cmd_macro() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" list result run
  else
    _files
  fi
}

_sfa-cmd_action() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" clear disable enable exec kill result terminate toggle
  else
    _files
  fi
}

_sfa-cmd_user() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" create destroy drop-tokens key list password tokens
  else
    _files
  fi
}

_sfa-cmd_key() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" create destroy list props regenerate set
  else
    _files
  fi
}

_sfa-cmd_file() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" create get mod unlink upload
  else
    _files
  fi
}

_sfa-cmd_cvar() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" delete get list set
  else
    _files
  fi
}

_sfa-cmd_log() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" api critical debug error get info warning
  else
    _files
  fi
}

_sfa-cmd() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 1 ]]; then
    compadd "$@" action clear cloud cmd controller corescript cvar cycle debug dump edit file history key lock log macro notifier notify remote reset save server set slog state supervisor test toggle unlock user watch
  else
    case "${words[2]}" in
      action|cloud|controller|corescript|cvar|cycle|edit|file|key|log|macro|notifier|notify|server|supervisor|user)
        _sfa-cmd_${words[2]}
        ;;
      *)
        _files
        ;;
    esac
  fi
}
