#compdef sfa-notifier

_sfa-notifier_server() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 2 ]]; then
    compadd "$@" launch restart start status stop
  else
    _files
  fi
}

_sfa-notifier() {
  local cword
  let cword=CURRENT-1
  if [[ $cword -eq 1 ]]; then
    compadd "$@" config create destroy disable enable list props server set subscribe test unsubscribe
  else
    case "${words[2]}" in
      server)
        _sfa-notifier_${words[2]}
        ;;
      *)
        _files
        ;;
    esac
  fi
}
