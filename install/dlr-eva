/opt/eva/log/*.log {
    hourly
    missingok
    rotate 1
    nocompress
    delaycompress
    notifempty
    create 640 root adm
    sharedscripts
    postrotate
        [ -f /opt/eva/var/uc.pid ] && /opt/eva/sbin/uc-control logrotate
        [ -f /opt/eva/var/lm.pid ] && /opt/eva/sbin/lm-control logrotate
        [ -f /opt/eva/var/sfa.pid ] && /opt/eva/sbin/sfa-control logrotate
    endscript
}
