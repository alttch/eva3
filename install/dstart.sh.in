#!/bin/sh

while [ 1 ]; do
    if [ -f /.installed  ]; then
        while [ 1 ]; do
            sleep 86400
        done
    else
        # download EVA ICS
        mkdir -p /opt
        cd /opt
        wget https://www.eva-ics.com/download/{{VERSION}}/stable/eva-{{VERSION}}-{{BUILD}}.tgz -O eva.tgz
        tar xzf eva.tgz
        mv -f eva-{{VERSION}} eva
        rm -f eva.tgz
        # setup EVA ICS
        /opt/eva/easy-setup --force --clear && touch /.installed
    fi
done
